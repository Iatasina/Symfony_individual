{% extends 'base.html.twig' %}

{% block title %}Категория аренды{% endblock %}

{% block body %}
    <h3>Категория аренды</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.type }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_info_category_show', {'id': category.id}) }}">Show</a>
                    <a class="btn btn-primary" href="{{ path('app_info_category_edit', {'id': category.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_info_category_new') }}">Create new</a>
{% endblock %}
